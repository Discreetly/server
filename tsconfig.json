{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2022",
    "module": "ES2022",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strictNullChecks": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  },
  "files": [
    "./src/server.ts"
  ],
  "include": [
    "src/**/*.ts",
    "prisma/**/*.ts"
  ]
}
